# Application Settings
APP_NAME=Agentic Loan Sales System
APP_VERSION=1.0.0
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/loan_sales_db

# Redis
REDIS_URL=redis://localhost:6379/0

# LLM API Keys (fill in your keys)
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# LLM Configuration
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-20250514

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Storage (S3-compatible)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=loan-documents

# Underwriting Config
CREDIT_SCORE_THRESHOLD=700
MAX_EMI_TO_SALARY_RATIO=0.5
DEFAULT_INTEREST_RATE=12.5

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
